<Window x:Class="WpfTeam04.SqlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTeam04"
        mc:Ignorable="d"
        Title="SqlWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <WrapPanel>
                <Label Content="Server:" Width="100"></Label>
                <TextBox Name="ServerTextBox" Width="200" Margin="5"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <Label Content="Database:" Width="100"></Label>
                <TextBox Name="DbTextBox" Width="200" Margin="5"></TextBox>
            </WrapPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="connectButton" Content="Connect" Width="100" Click="connectButton_Click" Margin="60 0 0 0"></Button>
                <CheckBox Name="privateCheckBox" VerticalContentAlignment="Center" Margin="10 0" Content="Privé"></CheckBox>
            </StackPanel>
            <WrapPanel>
                <Label Content="Table:" Width="100"></Label>
                <TextBox Name="TableTextBox" Width="200" Margin="5"></TextBox>
            </WrapPanel>

            <Button Click="GetDataButton_Click" Name="GetDataButton" Content="Get data" Visibility="Collapsed" Width="100" Margin="3"></Button>
            
            <DataGrid x:Name="SqlDataGrid" Width="350" Height="250"></DataGrid>
        </StackPanel>
    </Grid>
</Window>
