<Window x:Class="HerhalingsOefening.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HerhalingsOefening"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <GroupBox Name="homeGroupBox" Grid.Row="1" Grid.Column="1" MinWidth="200" Margin="20" Padding="20">
            <StackPanel>
                <Label Content="Thuis"></Label>
                <Button Click="homeScoreButton_Click" Name="homeScoreButton" Padding="8" Margin="5" Content="0" FontSize="32"></Button>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Click="addButton_Click"  Name="homeYellowButton" Padding="8" Margin="5" Content="0" FontSize="32" Background="Yellow"></Button>
                    <Button Click="addButton_Click"  Name="homeRedButton" Padding="8" Margin="5" Content="0" FontSize="32" Background="red"></Button>
                </StackPanel>
            </StackPanel>

        </GroupBox>
        <GroupBox Name="actionGroupBox" Grid.Row="1" Grid.Column="2" MinWidth="200" Margin="20" Padding="20">
            <StackPanel>
                <TextBox Name="timerTextBox" Padding="8" Margin="10" FontSize="30" Text="00:00" HorizontalContentAlignment="Center"></TextBox>
                <Button Click="startButton_Click"  Name="startButton" Content="Start" Margin="10" Padding="8"></Button>
                <Button Click="stopButton_Click"  Name="stopButton" Content="Stop" Margin="10" Padding="8"></Button>
                <Button Click="resetButton_Click" Name="resetButton" Content="Reset" Margin="10" Padding="8"></Button>
                <Button Click="resultButton_Click"  Name="resultButton" Content="Resultaat" Margin="10" Padding="8"></Button>
            </StackPanel>
        </GroupBox>
        <GroupBox Name="outGroupBox" Grid.Row="1" Grid.Column="3" MinWidth="200" Margin="20" Padding="20">
            <StackPanel>
                <Label Content="Out"></Label>
                <Button Click="outScoreButton_Click" Name="outScoreButton" Padding="8" Margin="5" Content="0" FontSize="32"></Button>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Click="addButton_Click" Name="outYellowButton" Padding="8" Margin="5" Content="0" FontSize="32" Background="Yellow"></Button>
                    <Button Click="addButton_Click" Name="outRedButton" Padding="8" Margin="5" Content="0" FontSize="32" Background="Red"></Button>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
