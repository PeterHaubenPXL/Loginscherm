<Window x:Class="WPFTeam04.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTeam04"
        mc:Ignorable="d"
        Title="StudentWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="New Student" Name="newStudentMenuItem" Click="newStudentMenuItem_Click"></MenuItem>
                <MenuItem Click="closeMenuItem_Click" Header="Close" Name="closeMenuItem"></MenuItem>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom"></StatusBar>
        <StackPanel>
            <StackPanel Visibility="Hidden" Name="newStudentStackPanel" HorizontalAlignment="Center" Margin="10">
                <WrapPanel>
                    <Label Content="First name:" Width="125"></Label>
                    <TextBox Name="firstNameTextBox" Margin="5" Width="125"></TextBox>
                </WrapPanel>
                <WrapPanel>
                    <Label Content="Last name:" Width="125"></Label>
                    <TextBox Name="lastNameTextBox" Margin="5" Width="125"></TextBox>
                </WrapPanel>
                <WrapPanel>
                    <Button Name="insertStudentButton" Content="Add student" Width="125" Margin="5" Click="insertStudentButton_Click"></Button>
                    <Button Name="cancelButton" Content="Cancel" Width="125" Margin="5" Click="cancelButton_Click"></Button>
                </WrapPanel>
            </StackPanel>
            <DataGrid Name="studentDataGrid" Margin="10"></DataGrid>
        </StackPanel>
    </DockPanel>
</Window>
